//Create Main/Root Component
var App = React.createClass({
    //Set Default State
    getDefaultProps:function(){
        return{
            todos:[
                {label:"Task 1"},
                {label:"Task 2"}
            ]
        }
    },
    //render function
    render:function(){
        return(
            <div>
                <h1>ToDo Application</h1>
            <ToDo todos={this.props.todos} />
            </div>
        );
    }
});
//Create ToDo Component
var ToDo = React.createClass({
    //Set Default State For This Component
    getInitialState:function(){
        return{
               todos:this.props.todos
        }
    },
    //add function
    add:function(){
        var todos =this.state.todos;
        todos.unshift({label:item});
        this.setState({
            todos:todos
        });
    },
    //remove function
    remove:function(){
        var todos = this.state.todos;
        todos.splice(index,1);
        this.setState({
            todos:todos
        });
    },
    //render function
    render:function(){
        return(
            <div>
                <h1>Yo Have {this.state.todos.length} Pending Activity</h1>
                <ToDoInput addToDo={this.add}/>
                <ToDoList todos={this.state.todos} removeToDo={this.remove}/>
            </div>
        );
    }
});
//create ToDoInput Component
var ToDoInput = React.createClass({
    //Set Default State
    getInitialState:function(){
        return{
            value:""
        }
    },
    //Submit Function
    submit:function(e){
        e.preventDefault();
        this.props.addToDo(this.state.value);
        this.setState({
            value:""
        });
    },
    change:function(e){
        this.setState({
            value:e.target.value
        });
    },
    //render function
    render:function(){
        return(
            <div>
               <form onSubmit={this.submit}>
               <input type="text" className="form-control" required="required"
                   onChange={this.change} value={this.state.value}/>
               <button className="btn btn-primary" type="submit">Add</button>
               </form>
            </div>
        );
    }
});

ReactDOM.render(
    <App />,document.querySelector("#app")
);
