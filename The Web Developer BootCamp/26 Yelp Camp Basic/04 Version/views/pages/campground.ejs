<!-- views/pages/campground.ejs -->

<% include ../partials/header %>

    <body>
        <div class="container">
            <header class="jumbotron">
                <div class="container">
                    <h1>Welcome To Yelpcamp</h1>
                    <p>View Our Hand-Picked From All Over The World</p>
                    <a class="btn btn-primary btn-lg" href="/campground/new" target="_blank">Add New CampGround</a>
                </div>
            </header>
            <div class="row text-center" style="display:flex;flex-wrap:wrap">
                <% for (var i = 0;i < data.length;i++) {%>
                    <div class="col-md-3 col-sm-6">
                       <div class="thumbnail">
                           <img src="<%= data[i].image %>" alt="">
                       </div>
                       <div class="caption">
                           <h4><%= data[i].name %></h4>
                       </div>
                    </div>
                    <% } %>
            </div>

            <% include ../partials/footer %>
        </div>
    </body>