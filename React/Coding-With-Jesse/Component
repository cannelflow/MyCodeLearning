//demo.js
var Abc = React.createClass({
    render:function(){
        return(
            <div>
                <h1>Form Using Reactjs</h1>
                <h2>How Did You Hear About Us</h2>
                <form>
                    <p><label><input type="radio" name="" value="newspaper" />NewsPaper</label></p>
                    <p><label><input type="radio" name="" value="radio" />Radio</label></p>
                    <p><label><input type="radio" name="" value="tv" />TeleVision</label></p>
                    <p><label><input type="radio" name="" value="search" />Search Engine</label></p>
                    <p><label><input type="radio" name="" value="social" />Social Media</label></p>
                    <p><label><input type="radio" name="" value="other" />Other Please Specify <input type="text" /></label></p>
                    <p><label><input  type="submit"/></label></p>
                </form>
            </div>
        );
    }
});
React.render(<Abc />,document.querySelector(".container"));
