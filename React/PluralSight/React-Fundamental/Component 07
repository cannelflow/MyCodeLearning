//js file
var Count = React.createClass({
    getInitialState:function(){
        var count = {counter:1};
        setInterval(function(){
            this.setState({
                counter:this.state.counter+1
            });
        }.bind(this),1000);
        return count;
    },
    render:function(){
        return(
            <div>
                <h1>Counter</h1>
                <Display time={this.state.counter}/>

            </div>
        );
    }
});
var Display = React.createClass({
    render:function(){
        return(
            <div>
               <h2>{this.props.time}</h2>
            </div>
        );
    }
});
ReactDOM.render(
    <Count/>,
    document.querySelector("#app")
);
