//js file
var Echo = React.createClass({
    change:function(e){
        console.log(e.target.value);
    },
    render:function(){
        return(
            <div>
                <input type="text" onChange={this.change}/>
            </div>
        );
    }
});
ReactDOM.render(
    <Echo/>,
    document.querySelector("#app")
);
