//js file
var Layout = React.createClass({
    //define props and type in component
    propTypes:{
        name : React.PropTypes.string,
        isPerson : React.PropTypes.bool
    },
    //define default props
    getDefaultProps:function(){
        return {
            name : "React"
        }
    },
    // define initial state
    getInitialState:function(){
        return {
            value:1
        }
    },
    //component mount
    componentDidMount:function(){

    },
    //my own custom method
    _addByOne:function(){
        this.setState({
            value:this.state.value + 1
        });
    },
    render:function(){
        var greeting = "World"
        if(this.props.isPerson){
            greeting = (<Person name={this.props.name}/>);
        }
        return(
            <div>
                <h1>Hello {greeting} </h1>
                <h1>{this.state.value}</h1>
                <button onClick={this._addByOne}>Click Me</button>
            </div>
        );
    }
});
//creating another component
var Person = React.createClass({
    //define props and type in component
    propTypes:{
        name : React.PropTypes.string.isRequired

    },
    getDefaultProps:function(){
        return {
            name : "React"
        }
    },
    render:function(){
        return(
            <span>{this.props.name}</span>
        );
    }
});
//render the component to Dom which takes two parameter element and area where we have to render
ReactDOM.render(<Layout  isPerson={true}/>,
    document.querySelector("#app")
);
