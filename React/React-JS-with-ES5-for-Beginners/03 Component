//js file
//Create Component
var HelloWorld = React.createClass({
        render:function(){
            return(
                <div>
                    <h1>Hello World</h1>
                </div>
                );
        }
    }
    );
//Render The Component In DOM
ReactDOM.render(<div>
    <HelloWorld />
    <HelloWorld />
    <HelloWorld />
</div>,
    document.querySelector("#app")
);
