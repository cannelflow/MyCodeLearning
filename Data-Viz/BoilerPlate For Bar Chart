//js file
var dataset = [5, 10, 13, 19, 21, 25, 22, 18, 15, 13,
                11, 12, 15, 20, 18, 17, 16, 18, 23, 25,23,20];
var w = 500;
var h = 100;
var barPadding = 1;
//create svg element
var svg = d3.select("body").
    append("svg").
    attr("height", h).
    attr("width", w);
//bind data
var rects = svg.selectAll("rect").
    data(dataset);
//enter data
rects.enter().
    append("rect");
//update data
rects.attr("x", function (d, i) {
    return i * (w / dataset.length);
}).
    attr("y", function (d) {
        return (h - d * 4);
    }).
    attr("height", function (d) {
        return (d * 4);
    }).
    attr("width", w / dataset.length - barPadding).
    attr("fill", "teal");
//exit data
rects.exit().
    remove();
//label
//bind data
var label = svg.selectAll("text").
    data(dataset);
//enter data
label.enter().
    append("text");
//update
label.text(function (d) {
    return (d);
}).
    attr("x", function (d, i) {
        return i * (w / dataset.length) + (w / dataset.length - barPadding) / 2;
    }).
    attr("y", function (d) {
        return (h - d * 4) + 14;
    }).
    attr("font-family", "sans-serif").
    attr("font-size", "11px").
    attr("fill", "white").
    attr("text-anchor", "middle");
