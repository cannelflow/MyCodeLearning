//js file
//create data
var dataset = []; //Initialize empty array
for (var i = 0; i < 10; i++) { //Loop 25 times
    var newNumber = Math.round(Math.random() * 500); //New random number (0-55)
    dataset.push(newNumber); //Add new number to array
}
var h = 500;
var w = 500;
var barWidth = 35;
var barOffSet = 5;
//create svg element
var myChart = d3.select("#chart").
    append("svg").
    attr("height", h).
    attr("width", w).
    style("background", "#f4f4f4");
//bind data
var rects = myChart.
    selectAll("rect").
    data(dataset);
//enter data
rects.
    enter().
    append("rect");
//update data
rects.
    style("fill", "lightgreen").
    attr("width", barWidth).
    attr("height", function (d) {
        return (d);
    }).
    attr("x", function (d, i) {
        return i * (barWidth + barOffSet);
    }).
    attr("y", function (d) {
        return (h - d);
    });
//exit data
rects.
    exit().
    remove();
