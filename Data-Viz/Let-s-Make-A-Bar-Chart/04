//js file
var data = [4, 8, 15, 16, 23, 42];
//create scale
var scale = d3.scale.linear()
                    .domain([0, d3.max(data)])
                    .range([0,420]);
//first we select chart
var chart = d3.select(".chart")
// bind data
 var bar =   chart
             .selectAll("div")
             .data(data);
//enter data
var barEnter = bar
    .enter().append("div");
//update data
barEnter
    .style("width", function (d) { return scale(d) * 10 + "px"; })
    .text(function (d) { return d; });
// css file
.chart div {
  font: 10px sans-serif;
  background-color: steelblue;
  text-align: right;
  padding: 3px;
  margin: 1px;
  color: white;
}
