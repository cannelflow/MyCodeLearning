//js file
var dataSet = [1, 2, 3, 4, 5];
//create liner scale with domain (data space/input) & range(pixel data/output)
var scale = d3.scale.linear()
              .domain([0, 5])
              .range([0,200]);
//create svg element by selecting the body and appending svg
//with height & width
var svg = d3.select("body").append("svg")
                           .attr("height", 250)
                           .attr("width", 250);
/*
to create rect element append rect to svg and give height & width
*/
//here we have data element > DOM element so we need selectAll() , data() & enter() method
//atlast append("rect")
var rect = svg.selectAll("rect")
              .data(dataSet)
              .enter()
              .append("rect")
              .attr("height", 20)
              .attr("width", 20)
              .attr("x", function (d) {
                  return (scale(d));
              })
              .attr("y", 50)
              .attr("fill", "blue");
