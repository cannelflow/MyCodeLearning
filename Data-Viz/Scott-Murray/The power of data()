//js file
var dataset = [];
for (var i = 0; i < 30; i++) {
    var newData = Math.round(Math.random()* 30);//Each time, it generates a new random number with a value between zero and 30.
    dataset.push(newData);
}
var body = d3.select("body");
//bind data
var divs = body.
    selectAll("div").
    data(dataset);
//enter
divs.
    enter().
    append("div").
    attr("class", "bar");
//update
divs.
    style("height", function (d) {
        return (d * 5 + "px");
    });
//css file
div.bar {
    display: inline-block;
    width: 20px;
    height: 75px;   /* We'll override this later */
    background-color: teal;
    margin-right:2px;
}
